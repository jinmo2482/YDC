<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0f10"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 左侧：状态 + 卡片 + 日志 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <!-- 顶部紧凑状态条 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#121213"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矿洞探索"
                android:textColor="#eaeaea"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBaseUrl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="--"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- chips 行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#171718"
                android:padding="8dp"
                android:text="M --"
                android:textColor="#eaeaea"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slArm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#171718"
                android:padding="8dp"
                android:text="A --"
                android:textColor="#eaeaea"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slBatt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#171718"
                android:padding="8dp"
                android:text="B --"
                android:textColor="#eaeaea"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#171718"
                android:padding="8dp"
                android:text="--"
                android:textColor="#ffd166"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 两张卡 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#171718"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="探索状态"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/explState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#eaeaea"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="#171718"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/posText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#eaeaea"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 日志：我们用代码控制只显示最后 3 行 -->
        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="#121213"
            android:padding="12dp"
            android:text="log..."
            android:textColor="#eaeaea"
            android:textSize="12sp" />

        <!-- 底部：设置/测试 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置 IP" />

            <Button
                android:id="@+id/btnHealth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="测试连接" />
        </LinearLayout>

    </LinearLayout>

    <!-- 右侧：探索范围 + 保存/读取 + 三个按钮 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 探索范围 panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#171718"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="探索范围（开始探索会自动保存）"
                    android:textColor="#eaeaea"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <!-- 6 输入 + 右侧按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/box_min_x"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="min_x"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="-10.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />

                            <EditText
                                android:id="@+id/box_min_y"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="min_y"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="-10.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />

                            <EditText
                                android:id="@+id/box_min_z"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="min_z"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="0.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/box_max_x"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="max_x"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="10.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />

                            <EditText
                                android:id="@+id/box_max_y"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="max_y"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="10.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />

                            <EditText
                                android:id="@+id/box_max_z"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:hint="max_z"
                                android:inputType="numberDecimal|numberSigned"
                                android:text="2.0"
                                android:textColor="#eaeaea"
                                android:background="#0f0f10"
                                android:padding="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnSaveBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="保存" />

                        <Button
                            android:id="@+id/btnLoadBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="读取" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 三按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnStartNodes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="启动探索" />

                <Button
                    android:id="@+id/btnStopNodes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="关闭探索" />

                <Button
                    android:id="@+id/btnStartMission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="开始探索" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
