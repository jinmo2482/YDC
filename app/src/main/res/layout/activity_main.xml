<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#0f0f10">

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部紧凑状态条 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#121213"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing="0.4"
                    android:text="YID无人机自主探索系统"
                    android:textColor="#eaeaea"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="设置 IP"
                    android:src="@android:drawable/ic_menu_manage"
                    android:tint="#eaeaea" />

                <TextView
                    android:id="@+id/tvBaseUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tvTitle"
                    android:text="--"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- chips 行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/slMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="#171718"
                    android:padding="6dp"
                    android:text="飞行模式 --"
                    android:textColor="#eaeaea"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slArm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="#171718"
                    android:padding="6dp"
                    android:text="解锁状态 --"
                    android:textColor="#eaeaea"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slBatt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="#171718"
                    android:padding="6dp"
                    android:text="电池电量 --"
                    android:textColor="#eaeaea"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/posText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="#171718"
                    android:padding="6dp"
                    android:text="当前位置 --"
                    android:textColor="#eaeaea"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 两张卡 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:background="#171718"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:text="系统状态"
                        android:textColor="#aaaaaa"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/systemStatusText"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"

                        android:layout_marginTop="6dp"
                        android:text="--"
                        android:textColor="#ffd166"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="25dp"
                        android:text="探索状态"
                        android:textColor="#aaaaaa"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/explState"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="6dp"
                        android:text="--"
                        android:textColor="#eaeaea"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="190dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="#171718"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="探索范围"
                        android:textColor="#eaeaea"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- 6 输入 + 右侧按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/box_min_x"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="min_x"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="-10.0"
                                    android:textColor="#eaeaea" />

                                <EditText
                                    android:id="@+id/box_min_y"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="min_y"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="-10.0"
                                    android:textColor="#eaeaea" />

                                <EditText
                                    android:id="@+id/box_min_z"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="min_z"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="0.0"
                                    android:textColor="#eaeaea" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/box_max_x"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="max_x"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="10.0"
                                    android:textColor="#eaeaea" />

                                <EditText
                                    android:id="@+id/box_max_y"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="max_y"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="10.0"
                                    android:textColor="#eaeaea" />

                                <EditText
                                    android:id="@+id/box_max_z"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:layout_weight="1"
                                    android:background="#0f0f10"
                                    android:hint="max_z"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:padding="6dp"
                                    android:text="2.0"
                                    android:textColor="#eaeaea" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnSaveBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="保存" />

                            <Button
                                android:id="@+id/btnLoadBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="6dp"
                                android:text="读取" />
                        </LinearLayout>

                    </LinearLayout>
                    <!-- 三按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnStartNodes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="启动探索" />

                        <Button
                            android:id="@+id/btnStopNodes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="关闭探索" />

                        <Button
                            android:id="@+id/btnStartMission"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="开始探索" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 日志 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#121213"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="日志"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="90dp"
                    android:text="log..."
                    android:textColor="#eaeaea"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/exploreContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:visibility="gone" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:keepScreenOn="true"
        android:visibility="gone"
        app:show_buffering="always"
        app:use_controller="false" />

    <!-- 底部导航（固定） -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_nav"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnNavStatus"
            style="@style/Widget.GroundControlApp.BottomNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="状态" />

        <Button
            android:id="@+id/btnNavExplore"
            style="@style/Widget.GroundControlApp.BottomNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="探索" />

        <Button
            android:id="@+id/btnNavVideo"
            style="@style/Widget.GroundControlApp.BottomNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="视频" />

        <Button
            android:id="@+id/btnNavMap"
            style="@style/Widget.GroundControlApp.BottomNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="地图" />
    </LinearLayout>

</RelativeLayout>
