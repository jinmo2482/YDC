<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0f0f10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接模式"
        android:textColor="#eaeaea"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="10dp"/>

    <Switch
        android:id="@+id/swDirectMavlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Direct MAVLink (TCP)"
        android:textColor="#eaeaea"
        android:padding="8dp"
        android:minHeight="48dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地面站地址（HTTP）"
        android:textColor="#eaeaea"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/etHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP，例如 192.168.144.11"
        android:textColor="#eaeaea"
        android:textColorHint="#666666"
        android:background="#171718"
        android:padding="12dp"
        android:inputType="textNoSuggestions"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/etPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="端口，例如 8000"
        android:textColor="#eaeaea"
        android:textColorHint="#666666"
        android:background="#171718"
        android:padding="12dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAVLink TCP"
        android:textColor="#eaeaea"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/etMavlinkHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP，例如 192.168.144.11"
        android:textColor="#eaeaea"
        android:textColorHint="#666666"
        android:background="#171718"
        android:padding="12dp"
        android:inputType="textNoSuggestions"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/etMavlinkPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="端口，例如 5760"
        android:textColor="#eaeaea"
        android:textColorHint="#666666"
        android:background="#171718"
        android:padding="12dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试 /api/health"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结果：--"
        android:textColor="#eaeaea"
        android:layout_marginTop="12dp"/>
</LinearLayout>
