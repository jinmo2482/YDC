<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.GroundControlApp.StatusDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- 用 android:background 覆盖背景（最不挑版本，最稳） -->
        <item name="android:background">@drawable/bg_status_dialog</item>

        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.GroundControlApp.Dialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.GroundControlApp.DialogButton</item>
    </style>

    <style name="TextAppearance.GroundControlApp.Dialog.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Widget.GroundControlApp.DialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button</item>
    </style>
</resources>
